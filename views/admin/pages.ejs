<% include ../layouts/adminHeader %>
  <h1><%= title %></h1>
  <a href="/admin/pages/add-page" class="btn btn-outline-success my-3" >Add new Page</a>

  <table class="table">
    <thead>
      <tr>
        <th>Title</th>
        <th>Edit</th>
        <th>Delete</th>
      </tr>
    </thead>
    <tbody>
      <% pages.forEach(page => { %>
        <tr>
          <td><%= page.title %></td>
          <td><a href="/admin/pages/edit-page/<%= page.slug %>">Edit</a></td>
          <td><a href="/admin/pages/delete-page/<%= page._id %>">Delete</a></td>
        </tr>
      <% }) %>
    </tbody>
  </table>
<% include ../layouts/adminFooter %>